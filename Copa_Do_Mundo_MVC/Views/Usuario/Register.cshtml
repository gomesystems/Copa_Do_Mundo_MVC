@model Copa_Do_Mundo_MVC.Models.RegisterModel
@{
    ViewBag.Title = "Cadastro";
}

<section class="container" style="margin-top: 50px">
    <div class="row">

       
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()

        <fieldset>
            <legend>Cadastro</legend>
            <ol>
                <li>
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)

                </li>
                <li> @Html.LabelFor(m => m.Email)  @Html.TextBoxFor(m => m.Email) </li>
                <li> @Html.LabelFor(m => m.Password)  @Html.PasswordFor(m => m.Password) </li>
                <li> @Html.LabelFor(m => m.ConfirmPassword)  @Html.PasswordFor(m => m.ConfirmPassword)  </li>
            </ol>
            <p class="message -info">
                Senhas devem ter no minimo @Membership.MinRequiredPasswordLength caracteres.
            </p>
            <input type="submit" value="Cadastrar" class="btn-primary" />
        </fieldset>

        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")

        }
    </div>
</section>