@model Copa_Do_Mundo_MVC.Models.LoginModel
@{
    ViewBag.Title = "Log in";
}


<section class="container" style="margin-top: 50px">
    <div class="row">


        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))

        {

            @Html.ValidationSummary(true, "Login não foi efetuado. Informe os dados corretos.← ")
            <fieldset>
                <legend>Formulário de Login</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.UserName)
                        @Html.TextBoxFor(m => m.UserName)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)
                    </li>
                    <li>
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </li>
                </ol>
                <input type="submit" value="Log in" class="btn-primary" />
            </fieldset>
            <p>
                @Html.ActionLink("Cadastre-se", "Register").
            </p>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

</div>
</section>