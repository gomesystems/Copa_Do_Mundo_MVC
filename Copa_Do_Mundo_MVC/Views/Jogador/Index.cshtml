@model IEnumerable<Copa_Do_Mundo_MVC.Models.Jogador>
@{
    ViewBag.Title = "Listagem de Jogadores";
}

<h2>Listagem de Jogadores</h2>
<p>
    @Html.ActionLink("Cadastrar Jogador", "Create")
</p>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th scope="col">
               Posição @*@Html.DisplayNameFor(model => model.Posicao)*@
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nascimento)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th scope="col">
                Cod Seleção@*@Html.DisplayNameFor(model => model.SelecaoId)*@
            </th>
            <th scope="col">-</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Posicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Altura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SelecaoId)
                </td>
                <td>@Html.ActionLink("Remover", "Delete", new { id = item.Id })</td>
            </tr>
        }
    <tbody>
</table>
